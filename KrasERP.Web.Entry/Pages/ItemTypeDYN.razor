@page "/ddy"

<Tab IsBorderCard="true">
    <TabItem Text="DDD">
        <Counter></Counter>
    </TabItem>
    <TabItem Text="AA">
        <FetchData></FetchData>
    </TabItem>
    <TabItem Text="@TabItemText">
    </TabItem>
</Tab>

@code {
    private string TabItemText { get; set; } = "Test";

    private Task OnSetTitle(string text)
    {
        TabItemText = text;
        StateHasChanged();
        return Task.CompletedTask;
    }
}
